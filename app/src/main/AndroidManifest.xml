<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- File system permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <!-- For Android 13+ -->
    <uses-permission android:name="android.permission.READ_MEDIA_DOCUMENTS" />
    
    <!-- Internet permission for potential future features -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".OrgUtilApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrgUtil"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OrgUtil">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Handle org file opening -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:mimeType="text/org" />
                <data android:mimeType="text/plain" />
                <data android:pathPattern=".*\\.org" />
            </intent-filter>
        </activity>
        
        <!-- Quick Capture Activity for Widget -->
        <activity
            android:name=".widget.QuickCaptureActivity"
            android:exported="false"
            android:theme="@style/Theme.OrgUtil.Dialog"
            android:launchMode="singleTop" />
        
        <!-- Quick Capture Widget -->
        <receiver
            android:name=".widget.QuickCaptureWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/quick_capture_widget_info" />
        </receiver>
    </application>

</manifest>